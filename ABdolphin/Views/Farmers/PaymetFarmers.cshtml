                                                        <td style="text-align:right">@Item.PaidAmount</td>
                                                        <td>@Item.RemainingAmount</td>
                                                        <td>@Item.CashDate</td>
                                                        <td>@Item.PayType</td>
                                                        <td>@Item.ChequeNo</td>
