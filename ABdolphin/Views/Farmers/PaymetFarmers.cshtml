                                            <th>Reciept No</th>
                                            <th>Generated Amount</th>
                                            <th style="text-align:right">Paid Amount</th>
                                            <th>Remaining Amount</th>
                                            <th>Payment Date</th>
                                            <th>Payment Type</th>
                                            <th>Cheque No</th>
                                            <th>Bank Name</th>
                                            <th>Remark</th>
                                            <th>Cheque Status</th>
                                            <th>Action</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.ClearedListItem != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.ClearedListItem)
