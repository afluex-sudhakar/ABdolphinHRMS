@model ABdolphin.Models.Master

@{
    ViewBag.Title = "ExpenseTypeMasterList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("ExpenseTypeMasterList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <div class="contents">
        <div class="atbd-page-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 mt-2">
                        <div class="card card-default card-md mb-4">
                            <div class="card-body">
                                <ul class="atbd-breadcrumb nav">
                                    <li class="atbd-breadcrumb__item">
                                        <a href="#">
                                            <span class="la la-home"></span>
                                        </a>
                                        <span class="breadcrumb__seperator">
                                            <span class="la la-slash"></span>
                                        </span>

                                    </li>
                                    <li class="atbd-breadcrumb__item">
                                        <a href="#">Expense Management</a>
                                        <span class="breadcrumb__seperator">
                                            <span class="la la-slash"></span>
                                        </span>
                                    </li>

                                    <li class="atbd-breadcrumb__item">
                                        <span>ExpenseTypeMasterList</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid card">
            <h5 class="mt-3">ExpenseTypeMaster List</h5>

            <a class="btn btn-primary btn-sm" style="margin-left:75%;margin-top:5px;" href="/Master/ExpenseTypeMaster">Add New</a>
            <p style="color: red">
                @TempData["ExpenseType"]
            </p>
            <div class="col-lg-12 mb-30">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="myTable" class="table mb-0 table-borderless">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Expense Type Name</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstExpenseType != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstExpenseType)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.ExpenseTypeName</td>
                                                    <td>
                                                        <a class="btn btn-primary edit" data-toggle="tooltip" target="_blank" href="/Master/ExpenseTypeMaster?cid=@Item.EncryptKey" title="" data-original-title="Edit">
                                                            <i class="material-icons">Edit</i>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="/Master/DeleteExpenseType?Eid=@Item.EncryptKey" class="btn btn-danger" data-toggle="tooltip" title="" data-original-title="Delete">
                                                            <i class="material-icons">Delete</i>
                                                        </a>
                                                    </td>


                                                </tr>

                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <input type="hidden" id="UserType" value="@Session["UserType"]" />
                            <input type="hidden" id="UserTypeName" value="@Session["UserTypeName"]" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
    $(document).ready(function () {
        var UserType = $('#UserType').val();
        var UserTypeName = $('#UserTypeName').val();
        if (UserType == 'Admin' && UserTypeName != 'Admin') {
            GetMenuDetails();
        }

    });
    function GetMenuDetails() {
        var URL = "/Master/ExpenseTypeMaster";
        $.ajax({
            type: "POST",
            url: "/Master/GetMenuDetails",
            data: { URL: URL },
            dataType: "json",
            //contentType: 'application/json; charset=utf-8',
            success: function (data) {
                var obj = jQuery.parseJSON(data);
                console.log(data)
                for (var i = 0; i < obj.length; i++) {
                    debugger
                    if (obj[i].FormDelete == true && obj[i].FormUpdate == false) {
                        $(".delete").show();
                        $(".edit").hide();
                        var table = $('#tableExport').DataTable();
                        table.column(2).visible(false);
                        table.column(3).visible(true);
                    }
                    else if (obj[i].FormDelete == false && obj[i].FormUpdate == true) {
                        $(".delete").hide();
                        $(".edit").show();
                        var table = $('#tableExport').DataTable();
                        table.column(2).visible(true);
                        table.column(3).visible(false);
                    }
                    else if (obj[i].FormDelete == true && obj[i].FormUpdate == true) {
                        $(".delete").show();
                        $(".edit").show();
                        table.column(2).visible(true);
                        table.column(3).visible(true);
                    }
                    else if (obj[i].FormDelete == false && obj[i].FormUpdate == false) {
                        $(".delete").hide();
                        $(".edit").hide();
                        var table = $('#tableExport').DataTable();
                        table.column(2).visible(false);
                        table.column(3).visible(false);
                    }
                    else {
                        $(".delete").hide();
                        $(".edit").hide();
                        var table = $('#tableExport').DataTable();
                        table.column(2).visible(false);
                        table.column(3).visible(false);
                    }
                }
            },
            error: function () {
                alert("Error occured!!")
            }
        });
    }
</script>




